<script>
$(function(){
    $("#upload").change(function(){
        if ($.browser.version == "7.0" || $.browser.version == "8.0") {
            $("#pic").css("filter","progid:DXImageTransform.Microsoft.AlphaImageLoader(sizingMethod=scale)");
            //$("#pic").get(0).filters.item("DXImageTransform.Microsoft.AlphaImageLoader").sizingMethod = "image";
            $("#pic").get(0).filters.item('DXImageTransform.Microsoft.AlphaImageLoader').src = this.value;
        } else if ($.browser.version == "6.0") {
alert($.browser.version);
            $("#pic").attr("src", this.value);
        }
    });
});
</script>
<input type="file" id="upload" /><br /> 
<div id="pic" style="width:100px;height:200px;"></div>

<input type="file" onchange="document.getElementById('view').innerHTML=' <img src=\'' + this.value + '\'/>';" /> 
<div id="view"> </div>
